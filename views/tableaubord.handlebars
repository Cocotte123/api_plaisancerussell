  <h1>Tableau de bord de {{userConnectedDetail}}</h1>
  <div class="col">
    <a href="#utilisateur"><button>Utilisateur</button></a>
    <a href="#catways"><button>Catways</button></a>
    <a href="#reservations"><button>Réservations</button></a>
    <a href="/logout"><button>Déconnexion</button></a>
  </div>
  <h2 id="utilisateur">Utilisateur:</h2>
  <div class="form-container">
    <h3>Créer un utilisateur</h3>
    <form action="/user" method="POST">
        <div class="form-group">
            <label for="name">Nom utilisateur</label>
            <input type="text" id="name" name="name" required>
        </div>
        <div class="form-group">
            <label for="mail">Mail utilisateur</label>
            <input type="email" id="mail" name="email" required>
        </div>
        <div class="form-group">
            <label for="password">Mot de passe utilisateur</label>
            <input type="password" id="password" name="password" required>
        </div>
        <button type="submit">Enregistrer</button>
    </form>

  </div>
  <div>
    <h3>Liste des utilisateurs</h3>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Email</th>
                <th scope="col">Mot de passe</th>
                <th scope="col">Id</th>
                <th scope="col">Créé le</th>
                <th scope="col">Mis à jour le</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each userslist}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.password}}</td>
                <td>{{this._id}}</td>
                <td>{{this.created}}</td>
                <td>{{this.updated}}</td>
                <td>
                    <div>
                        <a href="/user/{{this._id}}">
                        <button>Modifier</button>
                        </a>
                    </div>
                    <form  class="btn" action="/userdeleted/{{this._id}}" method="POST">
                        <button>Supprimer</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
  </div>
  <h2 id="catways">Catways:</h2>
    <div class="form-container">
        <h3>Créer un catway</h3>
        <form action="/catway" method="POST">
            <div class="form-group">
                <label for="catwayNumber">N° Catway</label>
                <input type="number" id="catwayNumber" name="catwayNumber" required>
            </div>
            <div class="form-group">
                <label for="type">Type de catway</label>
                <select id="type" name="type" required>
                    <option value="short">short</option>
                    <option value="long">long</option>
                </select>
            </div>
            <div class="form-group">
                <label for="catwayState">Etat du catway</label>
                <input type="text" id="catwayState" name="catwayState" required>
            </div>
            <button type="submit">Enregistrer</button>
        </form>

    </div>
    <a href="/catway/list"><button>Liste des catways</button></a>
  <h2 id="reservations">Réservations:</h2>